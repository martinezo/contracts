.container-fluid
  = simple_form_for @catalogs_device, remote: true, html: {class: 'form-horizontal'}, wrapper: :horizontal_form do |f|
    
    = f.error_notification
    = f.input :name, required: true
    = f.input :unam_stock_number, required: true
    = f.association :location, required: true, label_method: :department, value_method: :id, label: t('.department')
    .modal-footer
      = f.button :submit, t('save'), class:"btn btn-sm btn-tss col-md-3 col-md-offset-3"
      - if @eureka.nil?
        = link_to t('back'), catalogs_devices_path, class: "btn btn-sm btn-tss"
      - else
        = link_to t('show'), @catalogs_device, class: "btn btn-sm btn-tss", remote: true
        = link_to t('back'), catalogs_devices_path, class: "btn btn-sm btn-tss"
