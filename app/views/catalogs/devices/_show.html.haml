.modal-header
  %h3.modal-title
    = t('.title_info_device')

.modal-body    
  /%p#notice= notice
  .row
    .col-xs-6.col-md-4
      %p
        %b
          = t('.name')
    .col-xs-12.col-md-8
      %p 
        = @catalogs_device.name
    .col-xs-6.col-md-4 
      %p
        %b 
          = t('.unam_stock_number')
    .col-xs-12.col-md-8
      %p
        = @catalogs_device.unam_stock_number
    .col-xs-6.col-md-4
      %p
        %b 
          = t('.location_id')
    .col-xs-12.col-md-8 
      %p 
        = @catalogs_device.location.department

.modal-footer
  = link_to t('edit'), edit_catalogs_device_path(@catalogs_device), class: "btn btn-sm btn-tss", remote: true
  = link_to t('back'), catalogs_devices_path, class: "btn btn-sm btn-tss", data: { dismiss: 'modal'}

