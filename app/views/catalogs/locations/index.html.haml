.title_locations
  %h1
    = t('.title_location')
.barra_busqueda
  = render partial: 'layouts/search',locals: { viewer: 'locations' }
.cuerpo_locations
  .table-responsive
    %table.table.table-striped
      %thead
        %tr
          %th 
            = t('.department')
          %th 
            = t('.responsible')
          %th 
            = t('.email')
          %th
          %th
          %th
      %tbody
        - @catalogs_locations.each do |catalogs_location|
          %tr
            %td= catalogs_location.department
            %td= catalogs_location.responsible
            %td= catalogs_location.email
            %td
              = link_to '', catalogs_location, class: "btn btn-tss fa fa-eye", title: "Ver", remote: true
            %td
              = link_to '', edit_catalogs_location_path(catalogs_location), class: "btn btn-tss fa fa-pencil-square-o", title: "Editar", remote: true
            %td
              = link_to '', catalogs_location, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: "btn btn-tss fa fa-trash-o", title: "Eliminar", remote: true
.paginacion
  .apple_pagination
    = will_paginate @catalogs_locations, :container => false 
  %br
  = link_to t('.add_location'), new_catalogs_location_path, class: "btn btn-tss", remote: true
#location-modal.modal.fade
  .modal-dialog
    #inner-location-modal.modal-content