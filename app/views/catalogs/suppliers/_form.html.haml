.container-fluid
  = simple_form_for @catalogs_supplier, remote: true, html: {class: 'form-horizontal'}, wrapper: :horizontal_form do |f|
    
    = f.error_notification
    = f.input :business_name, required: true
    = f.input :contact, required: true
    = f.input :phone, required: true
    = f.input :phone_office, required: true
    = f.input :email, required: true
    .modal-footer
      = f.button :submit, t('save'), class:"btn btn-sm btn-tss col-md-3 col-md-offset-3"    
      - if @eureka.nil? == false then
        = link_to t('show'), @catalogs_supplier, class: "btn btn-sm btn-tss", remote: true
      = link_to t('back'), catalogs_suppliers_path, class: "btn btn-sm btn-tss"        