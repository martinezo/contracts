%h2
  = t('.title_signin')

= simple_form_for resource, as: resource_name, url: registration_path(resource_name) do |f|
  = devise_error_messages!
  = f.input :login, label: t('.login'), autofocus: true
  = f.input :name, label: t('.name'),autofocus: true
  = f.input :email, label: t('.email'),autofocus: true
  
  =f.button :submit, t('.btn_signin'), class:"btn btn-default"
= render "devise/shared/links"