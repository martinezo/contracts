.modal-header
  %h3.modal-title
    = t('delete')

.modal-body
  %h4.modal-title
    = t('are_you_sure')

.modal-footer
  = link_to t('si'), {:controller => @viewer, :action => 'destroy',:id => @id}, :method => :delete, class: "btn btn-sm btn-tss", remote: true, data: {disable_with: "Submitting..."}
  = link_to t('cancel'), {:controller => @viewer, :action => 'index' }, :method => :get, class: "btn btn-sm btn-tss"
  
  #warning-modal.modal.fade
    .modal-dialog
      #inner-warning-modal.modal-content

