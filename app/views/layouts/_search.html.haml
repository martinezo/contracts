          .form-group
            = label_tag "codigo", t('search')
            = text_field_tag "codigo", "", :size => 30, :maxlenght => 50, :placeholder => t('value')
            = submit_tag t('search'), class:"btn btn-tss"
            = submit_tag t('show_all'), class:"btn btn-tss"
