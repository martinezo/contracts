  - @mailers.each do |key, value|
    - if @traduccion.has_key?(key) == true
      = label_tag("campo_etiqueta", @traduccion.fetch(key))
      = text_field_tag(key, @mailers.values_at(key))
    - elsif @traduccion.has_key?(key) == false
      = label_tag("campo_etiqueta", key)
      = text_field_tag(key, @mailers.values_at(key))

    / = label_tag("x", key)    
    / = text_field_tag(key, @mailers.values_at(key))

  = submit_tag "Submit", class:"btn btn-ttc"

