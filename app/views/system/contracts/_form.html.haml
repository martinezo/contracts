.container-fluid
  = simple_form_for @system_contract, remote: true, html: {class: 'form-horizontal'}, wrapper: :horizontal_form do |f|
       
    = f.error_notification
    = f.association :device, label: 'Equipo', required: true
    = f.association :supplier, label: 'Proveedor' ,label_method: :business_name, value_method: :id, requiered: true
    = f.label 'Fecha de inicio'
    /t('start_date')
    = datetime_select "start_date", "" 
    %br/
    = f.label 'Fecha final'
    /t('end_date')
    = datetime_select "end_date", ""
    = f.input :contract_no, requires: true
    = f.input :description, requires: true

    = f.button :submit, t('save'), class: "btn btn-tss col-md-3 col-md-offset-3"
