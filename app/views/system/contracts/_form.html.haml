.container-fluid
  = simple_form_for @system_contract, remote: true, html: {class: 'form-horizontal'}, wrapper: :horizontal_form do |f|
       
    = f.error_notification
    = f.association :device, label: t('.device'), required: true
    = f.association :supplier, label: t('.supplier') ,label_method: :business_name, value_method: :id, requiered: true
    = f.label t('.start_date')
    = date_select "start_date", ""
    %br/
    = f.label t('.end_date')
    = date_select "end_date", ""
    = f.input :contract_no, requires: true
    = f.input :description, requires: true, as: :text    
    = f.label t('.monto')
    = text_field_tag 'monto', @system_renewal.monto
    %br/
    .modal-footer
      = f.button :submit, t('save'), class: "btn btn-sm btn-tss col-md-3 col-md-offset-3", data: {disable_with: "Submitting..."}
      - if @eureka.nil?
        = link_to t('back'), system_contracts_path, class: "btn btn-sm btn-tss"    
      -else 
        = link_to t('show'), @system_contract, remote: true, class: "btn btn-sm btn-tss"
        = link_to t('back'), system_contracts_path, class: "btn btn-sm btn-tss"