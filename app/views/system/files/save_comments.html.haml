.container_general
  .title_file
    %h2 Guardar comentarios
  .barra_busqueda
    = render partial: 'layouts/search', locals: { viewer: 'nil' }
  .cuerpo_file 
    = simple_form_for :files, url: system_files_save_comments_path, :enforce_utf8 => true do |f|
      = f.input :comentarios, as: :text, label: t('.comments'), input_html: { :value => @comentarios, :class => 'col-md-8 form-horizontal', :rows => '10', :class => 'form-control'}
      %br/
      = f.button :submit, 'Guardar Comentarios', class:"btn btn-ttc"     
      = link_to "Volver a la lista de archivos", system_files_list_files_path, class:"btn btn-ttc"
      /= link_to 'HOLA', system_prueba_no_existe_path

    / = form_tag({:controller => "files", :action => "save_comments"}, :method => "post") do
    /   = text_area_tag "comentarios", @comentarios, :cols => 50, :rows => 10, :required => "required"
    /   %br/
    /   = submit_tag "Guardar comentario"
    / %p
    /   = link_to "Volver a la lista de archivos", :controller => "files", :action => "list_files"

        