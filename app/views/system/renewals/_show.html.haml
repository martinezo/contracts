.modal-header
  %h3.modal-title
    = t('.title_info_renewal')

.modal-body
  %p#notice= notice

  %p
    %b Contract:
    = @system_renewal.contract_id
  %p
    %b Start date:
    = @system_renewal.start_date
  %p
    %b End date:
    = @system_renewal.end_date

.modal-footer
  = link_to t('edit'), edit_system_renewal_path(@system_renewal), class: "btn btn-sm btn-tss", remote: true
  = link_to t('back'), system_renewals_path, class: "btn btn-sm btn-tss"
