= form_tag({:controller => "reporter", :action => "index"}, :method => "GET", class: "form-inline") do
  = date_select "start_date", "", :size => 30, :maxlenght => 50, :placeholder => t('.search')   
  = date_select "end_date", "", :size => 30, :maxlenght => 50, :placeholder => t('.search')
