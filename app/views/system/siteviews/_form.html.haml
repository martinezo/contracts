    = f.association :renewal, label_method: :contract_no, value_method: :id
    = f.input :visit_date, required: true, wrapper_html: { class: 'form-inline' }
    = f.input :completed, required: true   
    = f.label "Recordarme el dia:"
    = datetime_select "recordar", "", :size => 30, :maxlenght => 50, :placeholder => t('search')    
