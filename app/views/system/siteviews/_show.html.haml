.modal-header
  %h3.modal-title
    = t('.title_info_siteview')

.modal-body
  /%p#notice= notice

  %p
    %b
      = t('.renewal_id')
    = @system_siteview.renewal_id
  %p
    %b 
      = t('.visit_date')
    = @system_siteview.visit_date
  %p
    %b 
      = t('.completed')
    = @system_siteview.completed
    
.modal-footer
  = link_to t('edit'), edit_system_siteview_path(@system_siteview), remote: true, class: "btn btn-sm btn-tss"
  = link_to t('back'), system_siteviews_path, class: "btn btn-sm btn-tss"
